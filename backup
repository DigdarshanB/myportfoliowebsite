    <script>
        function showPhotos() {
            document.querySelector('.photos').classList.add('active');
            document.querySelector('.videos').classList.remove('active');
            document.querySelectorAll('.switch-button')[0].classList.add('active');
            document.querySelectorAll('.switch-button')[1].classList.remove('active');
        }

        function showVideos() {
            document.querySelector('.photos').classList.remove('active');
            document.querySelector('.videos').classList.add('active');
            document.querySelectorAll('.switch-button')[0].classList.remove('active');
            document.querySelectorAll('.switch-button')[1].classList.add('active');
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
